{
  "name": "predicat",
  "version": "0.1.0",
  "description": "A cute library to create, combine, and enjoy common predicates",
  "author": {
    "name": "Vincent Guillou",
    "url": "https://github.com/vguillou"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vguillou/predicat.git"
  },
  "license": "WTFPL",
  "private": true,
  "module": "lib/index.esm.js",
  "main": "lib/umd/index.js",
  "types": "lib/types/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "rimraf lib && rollup -c",
    "docs": "typedoc --excludeExternals --externalPattern '**/__tests__/**/*' --includeVersion --out docs --theme minimal --mode file src",
    "lint": "eslint . --ext ts --fix",
    "test": "jest",
    "test:watch": "node --inspect node_modules/.bin/jest --watchAll --runInBand",
    "scan": "retire --colors",
    "ci:lint": "eslint . --ext ts --format junit -o reports/junit/ts-lint-results.xml",
    "ci:test": "JEST_JUNIT_OUTPUT_DIR=reports/junit JEST_JUNIT_OUTPUT_NAME=ts-test-results.xml jest --ci --reporters=jest-junit",
    "ci:scan": "retire"
  },
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.7",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "eslint": "^7.13.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "jest-junit": "^12.0.0",
    "lint-staged": "^10.5.1",
    "lodash.camelcase": "^4.3.0",
    "lodash.capitalize": "^4.2.1",
    "prettier": "^2.1.2",
    "retire": "^2.2.3",
    "rimraf": "^3.0.2",
    "rollup": "^2.33.2",
    "rollup-plugin-typescript2": "^0.29.0",
    "ts-jest": "^26.4.4",
    "tslib": "^2.0.3",
    "typedoc": "^0.19.2",
    "typescript": "^4.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts}": [
      "eslint"
    ],
    "*.{ts|json|yml|yaml|html}": [
      "prettier --write"
    ]
  }
}
