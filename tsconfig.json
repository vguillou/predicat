{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "lib",
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "lib/types",
    "sourceMap": true,
    "strict": true,
    "module": "ES2015",
    "target": "ES2015",
    "lib": [
      "ES5",
      "ES2015"
    ],
    "moduleResolution": "node",
    "allowJs": false,
    "esModuleInterop": true,
    "paths": {
      "@src/*": [
        "src/*"
      ],
      "@tests/*": [
        "src/__tests__/*"
      ],
      "@mocks/*": [
        "src/__mocks__/*"
      ],
      "@lib/*": [
        "lib/*"
      ]
    },
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "packages/*/build"
  ]
}